<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ClassTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTitleSize">70dp</item>
        <item name="android:textColor">#321C59</item>
        <item name="android:windowBackground">@android:color/holo_orange_light</item>
        <item name="android:fontFamily">@font/classfont</item>
        <item name="colorButtonNormal">#8C808E</item>
    </style>

    <style name="EventItemStyle">
        <item name="android:textColor">#0B3723</item>
        <item name="android:fontFamily">@font/classfont</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ClassEventItemStyle">
        <item name="android:textColor">#0B3723</item>
        <item name="android:fontFamily">@font/classfont</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="ItemButtonStyle">
        <item name = "android:textSize">18sp</item>
        <item name="android:textColor">#4A0D55</item>
        <item name = "backgroundColor">#918893</item>
        <item name = "fontWeight">600</item>
    </style>

    <style name="EventTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name = "android:textSize">20sp </item>
    </style>


</resources>